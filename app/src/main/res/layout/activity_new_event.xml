<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nedelu.juntada.activity.NewEventActivity">

    <TextView
        android:id="@+id/time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="28dp"
        android:text="Hora"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/edit_type"
        app:layout_constraintLeft_toRightOf="@+id/edit_date"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="13dp" />

    <Spinner
        android:id="@+id/edit_time"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/time_view"
        app:layout_constraintLeft_toRightOf="@+id/time_image">
    </Spinner>


    <TextView
        android:id="@+id/tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de juntada"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_location"
        app:layout_constraintLeft_toLeftOf="@+id/location_image" />


    <android.support.design.widget.TextInputLayout
    android:id="@+id/edit_name"
    android:layout_width="250dp"
    android:layout_height="56dp"
        android:layout_marginLeft="10dp"
        android:textColorHint="#757575"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintLeft_toRightOf="@+id/name_image">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:backgroundTint="#000000"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:text=""
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <requestFocus />
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_location"
        android:layout_width="250dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColorHint="#757575"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        app:layout_constraintLeft_toRightOf="@+id/location_image"
        app:layout_constraintTop_toBottomOf="@+id/edit_name">

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="#000000"
            android:ellipsize="end"
            android:ems="10"
            android:hint="Ubicacion"
            android:inputType="none"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@null"
            android:textIsSelectable="true" />

    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:id="@+id/edit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RadioButton"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tipo"
        app:layout_constraintLeft_toLeftOf="@+id/tipo">
        <RadioButton
            android:buttonTint="#000000"
            android:id="@+id/votacion"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votacion" />
        <RadioButton android:id="@+id/simple"
            android:buttonTint="#000000"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha predefinida" />


    </RadioGroup>

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_type"
        app:layout_constraintLeft_toLeftOf="@+id/edit_type" />
f
    <EditText
        android:textCursorDrawable="@null"
        android:id="@+id/edit_date"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="none"
        android:textIsSelectable="true"
        android:backgroundTint="#000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/date_view"
        app:layout_constraintLeft_toRightOf="@+id/calendar_image"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:indeterminateOnly="true"
        android:maxHeight="40dp"
        android:minHeight="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_type"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintLeft_toLeftOf="@+id/edit_location"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_event"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_done_white_48dp"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="29dp" />

    <ImageView
        android:id="@+id/calendar_image"
        android:layout_width="30dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/calendar_gray"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/date_view"
        app:layout_constraintTop_toTopOf="@+id/edit_date"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_date"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/location_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_location"
        app:layout_constraintLeft_toLeftOf="@+id/name_image"
        app:layout_constraintTop_toTopOf="@+id/edit_location"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/location_grey" />

    <ImageView
        android:id="@+id/name_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.341"
        app:srcCompat="@drawable/tag_grey"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/time_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_date"
        app:layout_constraintLeft_toLeftOf="@+id/time_view"
        app:srcCompat="@drawable/time_grey" />


</android.support.constraint.ConstraintLayout>
