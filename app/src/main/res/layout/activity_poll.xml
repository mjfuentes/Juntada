<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nedelu.juntada.activity.NewPollActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:text="Fecha"
        tools:layout_editor_absoluteY="46dp"
        tools:layout_editor_absoluteX="33dp" />

    <EditText
        android:textCursorDrawable="@null"
        android:id="@+id/edit_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:textIsSelectable="true"
        android:backgroundTint="#000000"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="28dp"
        android:text="Hora"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/edit_type"
        app:layout_constraintLeft_toRightOf="@+id/edit_date"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        android:layout_marginBottom="-31dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="13dp" />

    <Spinner
        android:id="@+id/edit_time"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/edit_date"
        app:layout_constraintBottom_toBottomOf="@+id/edit_date"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="-3dp"
        app:layout_constraintVertical_bias="0.0">
    </Spinner>

    <Button
        android:id="@+id/add_date"
        android:layout_width="43dp"
        android:layout_height="33dp"
        android:text="+"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_time"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/edit_time"
        app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintVertical_bias="0.062"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />

    <GridView
        android:id="@+id/date_list"
        android:layout_width="266dp"
        android:layout_height="375dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:numColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/edit_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_time"
        app:layout_constraintVertical_bias="0.914" />

</android.support.constraint.ConstraintLayout>
