<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="0dp"
    app:cardElevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/poll_name"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:text="Despedida de Marta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/voto_white"/>

        <TextView
            android:id="@+id/textView4"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="VOTAR" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="90dp">
        
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/option1"
                android:visibility="invisible"
                android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="150dp"
                android:layout_height="30dp">
                <TextView
                    android:text="LUN"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/text_day1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:text="30/06"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/voto_red"/>
                <TextView
                    android:text="02"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text_votes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#FF002233" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/option2"
                android:visibility="invisible"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="150dp"
                android:layout_height="30dp">
                <TextView
                    android:text="LUN"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/text_day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:text="30/06"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/voto_red"/>
                <TextView
                    android:text="02"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/text_votes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#FF002233" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <LinearLayout
                android:id="@+id/option3"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="150dp"
                    android:layout_height="30dp">
                    <TextView
                        android:text="LUN"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/text_day3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:text="30/06"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/text_date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/voto_red"/>
                    <TextView
                        android:text="02"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/text_votes3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#FF002233" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/option4"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="150dp"
                    android:layout_height="30dp">
                    <TextView
                        android:text="LUN"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/text_day4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:text="30/06"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/text_date4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/voto_red"/>
                    <TextView
                        android:text="02"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/text_votes4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#FF002233" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"></LinearLayout>
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>